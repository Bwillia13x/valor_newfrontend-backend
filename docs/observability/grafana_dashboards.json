{
  "dashboard_title": "Valor IVX - HTTP & Celery Overview",
  "timezone": "browser",
  "panels": [
    {
      "title": "HTTP Requests - Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (method,endpoint,status) (rate(http_requests_total[5m]))",
          "legendFormat": "{{method}} {{endpoint}} {{status}}"
        }
      ]
    },
    {
      "title": "HTTP Request Duration - P95",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
          "legendFormat": "{{method}} {{endpoint}} p95"
        }
      ]
    },
    {
      "title": "Celery Tasks - Rate by Status",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (task_name,status) (rate(celery_tasks_total[5m]))",
          "legendFormat": "{{task_name}} {{status}}"
        }
      ]
    },
    {
      "title": "Celery Task Duration - P95",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(celery_task_duration_seconds_bucket[5m])) by (le, task_name))",
          "legendFormat": "{{task_name}} p95"
        }
      ]
    },
    {
      "title": "Active Users (Gauge)",
      "type": "singlestat",
      "targets": [
        {
          "expr": "active_users"
        }
      ]
    },
    {
      "title": "Cache Hit Ratio",
      "type": "graph",
      "targets": [
        {
          "expr": "cache_hit_ratio"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "tenant",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_requests_total, tenant)",
        "includeAll": true
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "annotations": {
    "list": []
  },
  "schemaVersion": 27,
  "version": 1
}
